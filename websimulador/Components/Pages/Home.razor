@page "/"
@using websimulador.Services
@using websimulador.Models
@inject SupabaseService SupabaseService
<PageTitle>Clima del Sensor</PageTitle>

<h3><i class="fas fa-chart-line"></i> Lecturas del Sensor Ambiental</h3>

@if (data == null)
{
    <div class="alert alert-info">
        <i class="fas fa-spinner fa-spin"></i> Cargando datos...
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th><i class="fas fa-thermometer-half"></i> Temp (°C)</th>
                    <th><i class="fas fa-tint"></i> Humedad (%)</th>
                    <th><i class="far fa-clock"></i> Fecha y Hora</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in data)
                {
                    <tr>
                        <td class="fw-bold text-primary">@t.Temperature.ToString("F1")</td>
                        <td class="fw-bold text-success">@t.Humidity.ToString("F1")</td>
                        <td class="text-muted">@t.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<SensorData>? data;

    protected override async Task OnInitializedAsync()
    {
        data = await SupabaseService.GetSensorDataAsync();
    }
}