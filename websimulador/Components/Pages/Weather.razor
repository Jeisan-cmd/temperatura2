@page "/weather"
@attribute [StreamRendering]
@using websimulador.Services
@using websimulador.Models
@inject SupabaseService SupabaseService

<PageTitle>Clima del Sensor</PageTitle>

<div class="container mt-4">
    <h1><i class="fas fa-cloud-sun"></i> Clima del Sensor Ambiental</h1>
    <p>Datos en tiempo real desde tus dispositivos.</p>

    @if (sensorData == null)
    {
        <div class="alert alert-info">
            <i class="fas fa-spinner fa-spin"></i> Cargando lecturas del sensor...
        </div>
    }
    else if (sensorData.Count == 0)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-circle"></i> No hay datos registrados aún.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var reading in sensorData)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-thermometer-half text-danger" style="font-size: 2.2rem;"></i>
                                <div class="fs-3 fw-bold text-danger mt-2">
                                    @reading.Temperature.ToString("0.0")<small>°C</small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <i class="fas fa-tint text-primary" style="font-size: 2.2rem;"></i>
                                <div class="fs-3 fw-bold text-primary mt-2">
                                    @reading.Humidity.ToString("0.0")<small>%</small>
                                </div>
                            </div>
                            <small class="text-muted">
                                @reading.Timestamp.ToString("dd/MM/yyyy HH:mm")
                            </small>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-microchip"></i> @reading.DeviceId.ToString().Substring(0, 8)...
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<SensorData>? sensorData;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(300);
        sensorData = await SupabaseService.GetSensorDataAsync();
    }
}